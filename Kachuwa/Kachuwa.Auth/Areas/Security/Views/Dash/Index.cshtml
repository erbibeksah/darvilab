@model Kachuwa.Identity.Models.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="icon" href="data:image/x-icon;base64,AA==" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        body {
            padding: 20px;
        }

        .top-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }

        .table-container {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="top-bar">
            <div>
                <h4>Welcome, @Model.Username</h4>
                <p id="datetime">@Model.CurrentDateTime.ToString("F")</p>
            </div>
            <div>
                <button id="logoutBtn" class="btn btn-danger">Logout</button>
            </div>
        </div>

        <div class="table-container">
            <h5>All Users</h5>
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                    @if (Model.Users != null && Model.Users.Any())
                    {
                        <th>ID</th>
                        <th>Username</th>
                        <th>Role</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Login Provider</th>
                    }
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Users != null && Model.Users.Any())
                    {
                        foreach (var user in Model.Users)
                        {
                            <tr>
                                <td>@user.UserId</td>
                                <td>@user.Email</td>
                                <td>@user.RoleId</td>
                                <td>@user.FirstName</td>
                                <td>@user.LastName</td>
                                <td>@user.LoginProvider</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center">No users found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function updateDateTime() {
            const now = new Date();
            const options = {
                weekday:'long', year:'numeric', month:'long', day:'numeric',
                hour:'2-digit', minute:'2-digit', second:'2-digit'
            };
            document.getElementById('datetime').innerText = now.toLocaleDateString('en-US', options);
        }

        setInterval(updateDateTime, 1000);
        $("#logoutBtn").on("click", function () {
            event.preventDefault();
            $.ajax({
                type: "GET",
                url: '/Security/Auth/Logout',
                success: function(response) {
                    if(response.redirectUrl){
                        window.location.href = response.redirectUrl;
                    }
                },
                error: function(xhr, status, error) {
                }
            });
        });
    </script>
</body>
</html>